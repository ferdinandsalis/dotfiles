[locale]
# Time and date formats for clean, minimal output
timeformat = %H:%M
dateformat = %Y-%m-%d
longdateformat = %Y-%m-%d
datetimeformat = %Y-%m-%d %H:%M
longdatetimeformat = %Y-%m-%d %H:%M

# Week starts on Monday
firstweekday = 0

# Use unicode characters for better display
unicode_symbols = True

[default]
# Default calendar for new events (can be changed with -a flag)
# Note: Comment this out until you've synced your calendars
# default_calendar = google_personal

# Show all day events
show_all_days = True

# Highlight current date
highlight_event_days = True

# Print output format for list command
# This gives us the clean "10:00 Meeting" format
print_new = event

[view]
# Configure the interactive view (khal interactive)
# Use Catppuccin-inspired colors
theme = dark

# Event view settings
event_view_always_visible = True
frame = top
blank_line_before_day = True

# Keybindings for interactive mode
[keybindings]
new = n
search = /
quit = q
save = s