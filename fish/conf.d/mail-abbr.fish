# Himalaya Email Abbreviations

# Listing emails
abbr -a ml 'himalaya envelope list'
abbr -a mls 'himalaya envelope list -f "Sent Items"'
abbr -a mld 'himalaya envelope list -f Drafts'
abbr -a mlt 'himalaya envelope list -f Trash'

# Reading and writing
abbr -a mr 'himalaya message read'
abbr -a mw 'himalaya message write'
abbr -a mf 'himalaya message forward'
abbr -a mrp 'himalaya message reply'
abbr -a mra 'himalaya message reply --all'

# Managing emails
abbr -a md 'himalaya message delete'
abbr -a mm 'himalaya message move'
abbr -a mc 'himalaya message copy'

# Flags
abbr -a mflag 'himalaya flag add'
abbr -a munflag 'himalaya flag remove'

# Folders
abbr -a mfd 'himalaya folder list'

# Attachments
abbr -a ma 'himalaya attachment download'

# Account management
abbr -a mac 'himalaya account'