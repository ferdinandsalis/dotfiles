# Personal Configuration Template
# Copy this file to .env and update with your personal values
# Mise will automatically load these environment variables

# Computer Identity
DOTFILES_COMPUTER_NAME="your-computer-name"
DOTFILES_HOSTNAME="your-hostname"

# Git Configuration
DOTFILES_GIT_NAME="Your Name"
DOTFILES_GIT_EMAIL="your.email@example.com"
DOTFILES_GITHUB_USER="your-github-username"

# System Preferences
DOTFILES_TIMEZONE="Europe/Brussels"
DOTFILES_DEFAULT_SHELL="fish"  # Options: fish, zsh, bash

# Development
DOTFILES_EDITOR="hx"  # Options: hx, vim, code, nano
DOTFILES_BROWSER="Safari"  # Options: Safari, Chrome, Firefox, Arc

# Theme Preferences
DOTFILES_THEME="dark"  # Options: dark, light, auto

# Optional: Work/Personal Separation
# DOTFILES_WORK_EMAIL="your.work@company.com"
# DOTFILES_WORK_GIT_NAME="Your Work Name"
# DOTFILES_WORK_SERVER="work.server.com"
# DOTFILES_WORK_SERVER_IP="192.168.1.100"
# DOTFILES_WORK_USERNAME="workuser"

# Optional: API Keys (be careful not to commit these!)
# OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""