theme = "tokyonight-storm"

font-family = "Berkeley Mono"
font-thicken = true
font-size = 13

adjust-cell-height = 20

window-padding-x = 10
window-padding-y = 10
window-padding-balance = true
window-colorspace = "display-p3"
window-title-font-family = "Berkeley Mono Variable"

focus-follows-mouse = true
mouse-hide-while-typing = true

unfocused-split-opacity = 0.75

macos-titlebar-style = "transparent"
macos-window-shadow = true
macos-option-as-alt = false

auto-update = "download"

shell-integration = "fish"
shell-integration-features = "no-cursor"

copy-on-select = "clipboard"

keybind = cmd+ctrl+alt+shift+a>r=reload_config

keybind = cmd+ctrl+alt+shift+a>k=goto_split:top
keybind = cmd+ctrl+alt+shift+a>j=goto_split:bottom
keybind = cmd+ctrl+alt+shift+a>h=goto_split:left
keybind = cmd+ctrl+alt+shift+a>l=goto_split:right

keybind = cmd+ctrl+alt+shift+a>enter=toggle_split_zoom
keybind = cmd+ctrl+alt+shift+a>ctrl+w=close_surface
keybind = cmd+ctrl+alt+shift+a>ctrl+t=new_tab

keybind = global:cmd+grave_accent=toggle_quick_terminal
keybind = global:cmd+enter=new_window
